---
import {
  getLangFromUrl,
  useTranslatedPath,
  useTranslations,
} from '@/i18n/utils';

import { Text } from '@/components/ui/text';
import { Link } from 'lucide-react';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Text variant='h1' className='text-center p-2'>{t('nav.about')}</Text>
<div class='text-center p-4'>
  <a
    href={translatePath('/')}
    class='hover:underline flex items-center justify-center gap-1.5'
  >
    {t('nav.home')}
    <Link size={14} />
  </a>
</div>
